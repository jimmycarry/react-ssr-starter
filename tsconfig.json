{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "module": "esnext",
        "noImplicitAny": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "target": "es5",
        "paths": {
            "@src/*": ["src/*"]
        },
        "baseUrl": "./"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
